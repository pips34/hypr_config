# Removing docker and rails aliases
unalias d
unalias r

# Removing git aliases
unalias g
unalias gcm
unalias gcam
unalias gcad

# My aliases
alias \
    brc='source ~/.bashrc' \
    logout='hyprctl dispatch exit' \
    cls='clear' \
    powoff='systemctl poweroff' \
    reboot='systemctl reboot' \
    cat='bat -p' \
    ccat='bat' \

# Config files
alias \
    config='cd $CONFIG' \
    backup='cd $BACKUP' \
    hypr='cd $HYPR' \
    scripts='cd $SCRIPTS' \
    mako='cd $MAKO' \
    btop='cd $BTOP' \
    swayosd='cd $SWAYOSD' \
    alacritty='cd $ALACRITTY' \

# My navigation aliases
alias \
    docs='cd $DOCS' \
    repos='cd $REPOS' \
    tlf='cd $TLF' \
    personal='cd $PERSONAL' \
    apps='cd $APPS' \
    games='cd $GAMES' \
    downl='cd $DOWNL' \
    wallpapers='cd $WALLPAPERS' \
    nvc='cd ~/.config/nvim' \
    config='cd ~/.config' \
    hypr='cd ~/.config/hypr' \
    walker='cd ~/.config/walker' \
    b='cd -' \
    h='cd ~' \
    ..='cd ..' \
    ...='cd ../..' \
    ....='cd ../../..' \
    .....='cd ../../../..' \

# Reload stuff
alias \
    rl.hypr='hyprctl reload' \
    rl.walker='omarchy-restart-walker' \
    rl.idle='omarchy-restart-hypridle' \
    rl.waybar='omarchy-restart-waybar' \
    rl.mako='makoctl reload' \
    rl.swayosd='omarchy-restart-swayosd' \

# Home server paths
alias \
    media='cd $MEDIA' \
    famvq='cd $FAMVQ' \
    felipe='cd $FELIPE' \
    movies='cd $MOVIES' \
    shows='cd $SHOWS' \
    videos='cd $VIDEOS' \
    toshiba='cd $TOSHIBA' \

# Setup rc files
alias \
    balias.e='nvim ~/.config/hypr/aliasrc' \
    benv.e='nvim ~/.config/hypr/envrc' \
    nvimrc='nvim ~/.config/nvim/init.lua' \
    hyprconf='nvim ~/.config/hypr' \
    waybarconf='cd ~/.config/waybar && nvim .' \
    myconf='cd ~/.config/hypr && nvim myconfig.conf' \

# Home server
alias ssh.hs='ssh -i $HSPK famvq@$HSIP'

# Python
alias activate='source .venv/bin/activate'

# C
alias \
    zigcc='zig cc -Wall -Wextra -Wpedantic -Wconversion -Wshadow -Wstrict-prototypes -Werror' \

# Get some help...
alias gethelp="echo 'Stop it, get some help'"
alias \
    :wq=gethelp \
    :q=gethelp \
    :w=gethelp \
    :wa=gethelp \
    :qa=gethelp \
    :qall=gethelp \
    :wqa=gethelp \
    :x=gethelp \
